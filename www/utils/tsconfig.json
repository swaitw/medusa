{
  "compilerOptions": {
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": ".",
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "./packages/types"],
    "tsBuildInfoFile": "./dist/.tsbuildinfo-client",
    "noEmit": false,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["**/node_modules/**", "dist"]
}